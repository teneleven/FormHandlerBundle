{% extends '::base.html.twig' %}

{# import "_self" as the form theme #}
{% form_theme form _self %}

{# make the form fragment customization #}
{% block form_row %}
    {% spaceless %}
        <tr>
            <th>{{ form_label(form, label) }}</th>
            <td>{{ form.vars.value }}</td>
        </tr>
    {% endspaceless %}
{% endblock form_row %}

{% block body -%}
    <h1>Submission</h1>

    <table class="table">
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Is Viewed</th>
            <th>Created At</th>
        </tr>
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.isViewed }}</td>
            <td>{{ entity.createdAt|date('M d, Y h:m:s') }}</td>
        </tr>
    </table>

    <table class="table">
        {{ form(form) }}
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('submission') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
